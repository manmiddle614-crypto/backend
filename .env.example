# ==============================================
# PRODUCTION ENVIRONMENT VARIABLES
# ==============================================
# CRITICAL: Generate secure secrets before deployment
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"

# Database
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/dbname?retryWrites=true&w=majority
NODE_ENV=production

# Server
PORT=3000
FRONTEND_URL=https://yourdomain.com

# JWT Authentication (MUST be different from QR_JWT_SECRET)
JWT_SECRET=GENERATE_SECURE_64_BYTE_HEX_STRING_HERE
JWT_EXPIRY=7d

# QR Token Security (MUST be different from JWT_SECRET)
QR_JWT_SECRET=GENERATE_DIFFERENT_SECURE_64_BYTE_HEX_STRING_HERE
QR_TOKEN_EXPIRY_DAYS=30

# PIN Authentication
PIN_SALT_ROUNDS=12
PIN_MAX_ATTEMPTS=5
PIN_LOCK_MINUTES=30
DEVICE_TOKEN_EXPIRY_DAYS=365

# Razorpay Payment Gateway
RAZORPAY_KEY_ID=rzp_live_YOUR_KEY_ID
RAZORPAY_KEY_SECRET=YOUR_RAZORPAY_KEY_SECRET
RAZORPAY_WEBHOOK_SECRET=YOUR_WEBHOOK_SECRET

# Security
BCRYPT_ROUNDS=12
DOUBLE_SCAN_WINDOW=300
ALERT_THRESHOLD=5

# Email Configuration (for OTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password

# Logging
LOG_LEVEL=info

